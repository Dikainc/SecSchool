@model EnterpriseSchool.Web.Areas.Parent.ViewModel.WardViewModel

@if (TempData["Message"] != null)
{
    @Html.Partial("_Message", (EnterpriseSchool.Model.Model.Message)TempData["Message"])
}

@if (Model.Students.Count() <= 0)
{

}

else
{
    <div class="box">
        <div class="box-header">
            <i class="icon-book"></i>
            <h5>Verify ward</h5>
        </div>
        <div class="box-content">
            <table>
                @foreach (var i in Model.Students)
                {
                    <tr>
                        <td>Student Name</td>
                        <td>@i.FullName</td>
                    </tr>
                    <tr>
                        <td>Student Reg no.</td>
                        <td>@i.RegNo</td>
                    </tr>
                }
            </table>
            @using (Html.BeginForm("saveWardToParents", "Ward", FormMethod.Post))
            {
                @Html.TextAreaFor(m => m.PIN, new { @hidden = "hidden" })

                <button type="submit" onclick="PostBack()" class="btn btn-primary">
                    <i class="icon-ok"></i>
                    Verify
                </button>
            }
        </div>
    </div>
}
